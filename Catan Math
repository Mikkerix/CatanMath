<div class="text-purple">
 <form id="form">
   <input type="text" name="number1" id="number1" placeholder="Value #1" />
   <input type="text" name="number2" id="number2" placeholder="Value #2" />
   <input type="text" name="number3" id="number3" placeholder="Value #3" />
   <p id ="useless"> </p>
   <button type="submit">Submit</button>
 </form>
 body {
	background: white;
	place-items: center;

}
const form = document.getElementById("form");
form.addEventListener("submit", function (e) {
  e.preventDefault();
  var Possibilities_of_36_ = 0;
  var message1 = "You should get resources ";
  var message2 = " times of 36 different possibilities, or ";
  var message3 =
    "% of the time. Don't forget to bookmark this site (Ctrl + D)! We hope you enjoyed Catan Math, if you wanna play Catan online we recommend using colonist.io ";
  const number1 = document.getElementById("number1").value;
  const number2 = document.getElementById("number2").value;
  const number3 = document.getElementById("number3").value;
  for (var i = 1; i < 7; i++) {
    for (var n = 1; n < 7; n++) {
      if (i + n == number1 || i + n == number2 || i + n == number3) {
        Possibilities_of_36_ += 1;
      }
    }
  }
  var Percentage = ((parseInt(Possibilities_of_36_) / 36) * 100);
  var PercentageTwoDecimals = Percentage.toFixed(2);
  const output = document.getElementById("output");
  document.write(message1);
  document.write(Possibilities_of_36_);
  document.write(message2);
  document.write(PercentageTwoDecimals);
  document.write(message3);
});
</div>
